<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("layouts.logo"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("layouts.home"), root_path %></li>
        <li><%= link_to t("layouts.books"), books_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("layouts.borrows"), borrows_path %></li>
          <% if current_user.is_admin? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= t "layouts.managers" %><b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t("layouts.manager-users"),
                  admin_users_path %></li>
                <li><%= link_to t("layouts.manager-books"),
                  admin_books_path %></li>
                <li><%= link_to t("layouts.manager-authors"),
                  admin_authors_path %></li>
                <li><%= link_to t("layouts.manager-publishers"),
                  admin_publishers_path %></li>
                <li><%= link_to t("layouts.manager-categories"),
                  admin_categories_path %></li>
                <li><%= link_to t("layouts.manager-borrows"),
                  admin_borrows_path %></li>
              </ul>
            </li>
          <% else %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= t "layouts.account" %><b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t("layouts.profile"), current_user %></li>
                <li><%= link_to t("layouts.settings"),
                  edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to t("layouts.log-out"),
                    logout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% end %>
        <% else %>
          <li><%= link_to t("layouts.log-in"), login_path %></li>
          <li><%= link_to t("users.sign-up"), signup_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
